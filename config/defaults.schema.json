{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Defaults tunables schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "adrPdrBreakoutRule": {
      "type": "object",
      "properties": {
        "adr_window": { "type": "integer", "minimum": 1 },
        "pdr_lookback": { "type": "integer", "minimum": 0 },
        "breakout_threshold_pct": { "type": "number", "minimum": 0 },
        "volume_multiplier": { "type": "number", "minimum": 0 },
        "false_breakout_filter_seconds": { "type": "integer", "minimum": 0 }
      },
      "required": ["adr_window","pdr_lookback","breakout_threshold_pct"],
      "additionalProperties": false
    },
    "bollingerSqueezeRule": {
      "type": "object",
      "properties": {
        "band_length": { "type": "integer", "minimum": 1 },
        "sigma": { "type": "number", "minimum": 0 },
        "squeeze_bandwidth_threshold_pct": { "type": "number", "minimum": 0 },
        "breakout_volume_multiplier": { "type": "number", "minimum": 0 }
      },
      "required": ["band_length","sigma"],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
