# Application
NODE_ENV=production
PORT=8080
ENCRYPTION_KEY=change_me_32_bytes_hex

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=bnkite
POSTGRES_USER=bnkite
POSTGRES_PASSWORD=bnkite

# If POSTGRES_URL is set, it will be used over discrete vars
# POSTGRES_URL=postgres://bnkite:bnkite@postgres:5432/bnkite

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Zerodha
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_REDIRECT_URL=http://localhost:8080/api/broker/zerodha/callback

# Sentiment Providers (optional)
NEWS_PROVIDER=none   # options: webzio|tiingo|alphavantage|none
WEBZIO_KEY=
TIINGO_KEY=
ALPHAVANTAGE_KEY=

# Retention (days)
RETENTION_SNAPSHOTS_DAYS=30
RETENTION_CANDLES_DAYS=730
RETENTION_SIGNALS_DAYS=730
RETENTION_TRADES_DAYS=1825

# Feature flags (defaults for Docker local)
ENABLE_RULES_ENGINE=true
ENABLE_SIGNAL_ORCHESTRATOR=true

# Demo mode (no live creds required). When true, backend emits synthetic ticks/signals.
DEMO_MODE=false
