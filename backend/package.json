{
  "name": "banknifty-signals-backend",
  "version": "1.0.0",
  "description": "Backend for BankNifty Signals Workstation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:run": "node ./scripts/run_rules_demo.js",
    "dev:tsrun": "ts-node ./src/scripts/run_rules_demo.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "node ./scripts/run_migrations.js",
    "db:seed": "node ./scripts/run_seeders.js",
    "test": "jest --coverage",
    "test:smoke": "node ./tests/check_rules_config.js",
    "test:js": "jest --coverage --runTestsByPath tests/rules/*.js",
    "test:ts": "jest --config jest.config.cjs --coverage",
    "test:integration": "jest --testPathPattern=tests/integration --config jest.config.cjs",
    "test:integration:debug": "jest --testPathPattern=tests/integration --config jest.config.cjs --detectOpenHandles --runInBand",
    "run:dist": "node ./dist/scripts/run_rules_demo.js",
    "validate:defaults": "node ./scripts/validate-defaults.js",
    "lint": "eslint ./src --ext .ts,.js",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "18.18.2"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "cors": "2.8.5",
    "crypto-js": "4.2.0",
    "dotenv": "16.3.1",
    "express": "^4.21.2",
    "pg": "8.11.1",
    "pino": "8.17.0",
    "pino-pretty": "10.3.1",
    "redis": "4.6.7",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "technicalindicators": "^3.0.7",
    "typeorm": "0.3.17",
    "uuid": "9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/crypto-js": "4.2.1",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.5",
    "@types/node": "20.10.6",
    "@types/pino": "7.0.5",
    "@types/socket.io": "3.0.2",
    "@types/uuid": "9.0.7",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "ajv": "8.17.1",
    "eslint": "8.49.0",
    "jest": "29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.2.2"
  }
}
